<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relativo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ttt_show_point_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTHER USER REPORT"
            android:textColor="@color/Blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/photo_show_point_dialog"
            android:layout_below="@+id/ttt_show_point_dialog"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:background="@drawable/border_image"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/title_show_point_dialog"
            android:layout_below="@+id/photo_show_point_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976d2"
            android:textSize="15dp"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/text_show_point_dialog"
            android:layout_below="@+id/title_show_point_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976d2"
            android:textSize="15dp"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/localizacao_show_point_dialog"
            android:layout_below="@+id/text_show_point_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976d2"
            android:textSize="15dp"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/data_show_point_dialog"
            android:layout_below="@+id/localizacao_show_point_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976d2"
            android:textSize="15dp"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/username_show_point_dialog"
            android:layout_below="@+id/data_show_point_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976d2"
            android:textSize="15dp"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
</ScrollView>
